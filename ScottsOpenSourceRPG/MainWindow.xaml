<Window x:Class="ScottsOpenSourceRPG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Name}"
        FontSize="11pt"
        Height="768" Width="1024">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130*"/>
            <ColumnDefinition Width="387*"/>
        </Grid.ColumnDefinitions>
        <Menu Margin="0,1,0,0" FontSize="12pt" Grid.ColumnSpan="2">
            <MenuItem Header="_File" IsCheckable="False">
                <MenuItem Header="_Load" IsCheckable="False"/>
                <Separator/>
                <MenuItem Header="E_xit" IsCheckable="False" Click="MenuItem_Exit_OnClick"/>
            </MenuItem>
            <MenuItem Header="_Help" IsCheckable="False">
                <MenuItem Header="_View Help" IsCheckable="False"/>
                <Separator/>
                <MenuItem Header="_About" IsCheckable="False" Click="MenuItem_About_OnClick"/>
            </MenuItem>
        </Menu>
    </Grid>
    
</Window>
